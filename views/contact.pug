extends template.pug

block style 
     style
      include ../public/contact.css
block content 
    div.contactSection
        h1 Contact Us 
        form(action="/contact", method="post", class="contactForm") 
            input(type="text", class="form-input", name="name", placeholder="Enter your full name")
            input(type="email", class="form-input", name="email", placeholder="Enter your email id")
            input(type="phone", class="form-input", name="phone", placeholder="Enter your phone number")
            input(type="text", class="form-input", name="address", placeholder="Enter your address")
            input(type="text", class="form-input", name="context", placeholder="Enter your context here")
            button(class="buttonSubmit") 
                | Submit
